<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.securitylab.getbatterylevel">

    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>
    <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS"/>
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION"/>

    <application
        android:name="com.securitylab.getbatterylevel.App"
        android:allowBackup="true"
        android:icon="@drawable/mypowerspyicon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.securitylab.getbatterylevel.Main"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service
            android:name="BackgroundRecorder"
            android:enabled="true" />
    </application>
</manifest>
